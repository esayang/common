<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 自定义loading dialog -->
    <style name="CentaLoadingDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <!--loading progressbar-->
    <style name="CentaProgress">
        <item name="android:indeterminateDrawable">@drawable/centa_progress</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDuration">2500</item>
    </style>

    <style name="ToolBar">
        <item name="android:id">@id/toolBar</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="CheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_style</item>
    </style>

</resources>